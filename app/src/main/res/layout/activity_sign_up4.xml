<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_signUp4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3F0"
    tools:context=".SignUpActivity4">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_signup"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="14dp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="55dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/text_signupwarning"
                android:textColor="@color/red"
                tools:layout_editor_absoluteX="78dp"
                tools:layout_editor_absoluteY="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="선택 정보"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="40dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="15dp"
                    android:text="수강과목"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="82dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/lecture1_edittext_signup4"
                        android:layout_width="232dp"
                        android:layout_height="30dp"
                        android:background="#ffffff"
                        android:hint="@string/prompt_lecture"
                        android:inputType="text"
                        android:paddingLeft="8dp"
                        android:selectAllOnFocus="true"
                        tools:ignore="TouchTargetSizeCheck"
                        tools:layout_editor_absoluteX="54dp"
                        tools:layout_editor_absoluteY="113dp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="322dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                android:background="#ADADAD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="15dp"
                    android:text="MBTI"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="82dp" />

                <Spinner
                    android:id="@+id/mbti_spinner_signup4"
                    android:layout_width="232dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="21dp"
                    android:background="#ffffff"
                    android:entries="@array/MBTI_type"
                    android:hint="@string/prompt_name"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:selectAllOnFocus="true"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="113dp" />
            </LinearLayout>

            <View
                android:layout_width="322dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#ADADAD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="15dp"
                    android:text="관심사"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="82dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/topinterest_spinner_signup4"
                        android:layout_width="232dp"
                        android:layout_height="30dp"
                        android:background="#ffffff"
                        android:entries="@array/large_category"
                        android:paddingLeft="8dp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                        tools:layout_editor_absoluteX="54dp"
                        tools:layout_editor_absoluteY="113dp" />

                    <Spinner
                        android:id="@+id/underinterest_spinner_signup4"
                        android:layout_width="232dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:background="#ffffff"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"
                        tools:layout_editor_absoluteX="54dp"
                        tools:layout_editor_absoluteY="113dp" />

                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="322dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#ADADAD" />



            <View
                android:layout_width="322dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:background="#ADADAD" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="15dp"
                    android:text="상태메세지 설정"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="82dp" />

                <EditText
                    android:id="@+id/statusmessage_edittext_signup4"
                    android:layout_width="232dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="#ffffff"
                    android:hint="@string/prompt_message"
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:selectAllOnFocus="true"
                    tools:ignore="TouchTargetSizeCheck"
                    tools:layout_editor_absoluteX="54dp"
                    tools:layout_editor_absoluteY="113dp" />
            </LinearLayout>

            <Button
                android:id="@+id/signup_button_signup4"
                android:layout_width="wrap_content"
                android:layout_height="61sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#7075B6"
                android:text="@string/action_info_save"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>