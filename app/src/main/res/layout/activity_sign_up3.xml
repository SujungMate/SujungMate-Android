<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_signup3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E3F0"
    tools:context=".SignUpActivity3">


    <EditText
        android:id="@+id/nickname_edittext_signup3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="29dp"
        android:background="#ffffff"
        android:hint="@string/prompt_name"
        android:inputType="text"
        android:paddingLeft="8dp"
        android:selectAllOnFocus="true"
        app:layout_constraintBottom_toTopOf="@+id/major_textView_signup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nickname_textView_signup3"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <Spinner
        android:id="@+id/major_spinner_signup3"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="54dp"
        android:layout_marginLeft="54dp"
        android:layout_marginTop="59dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginBottom="58dp"
        android:background="#ffffff"
        android:entries="@array/interesting_major"
        android:paddingLeft="8dp"
        app:layout_constraintBottom_toTopOf="@+id/next_button_signup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nickname_edittext_signup3"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/nickname_textView_signup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="29dp"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/nickname_edittext_signup3"
        app:layout_constraintTop_toBottomOf="@+id/selectphoto_button_signup3" />

    <View
        android:id="@+id/line3_view_signup3"
        android:layout_width="0dp"
        android:layout_height="0.1dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:layout_marginBottom="74dp"
        android:background="#ADADAD"
        app:layout_constraintBottom_toBottomOf="@+id/major_spinner_signup3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/nickname_textView_signup3" />

    <TextView
        android:id="@+id/major_textView_signup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="65dp"
        android:text="주전공"
        android:textColor="@color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="@+id/major_spinner_signup3"
        app:layout_constraintTop_toBottomOf="@+id/nickname_textView_signup3" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_star"
        android:textColor="@color/red"
        app:layout_constraintBaseline_toBaselineOf="@+id/major_textView_signup3"
        app:layout_constraintEnd_toStartOf="@+id/line3_view_signup3"
        app:layout_constraintStart_toStartOf="@+id/line3_view_signup3" />

    <Button
        android:id="@+id/next_button_signup3"
        android:layout_width="84.6sp"
        android:layout_height="61sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="73dp"
        android:backgroundTint="#7075B6"
        android:text="@string/action_next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/selectphoto_button_signup3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="16dp"
        android:background="@color/light_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myinfo_textview_signup3"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/text_star"
        android:textColor="@color/red"
        app:layout_constraintBaseline_toBaselineOf="@+id/nickname_textView_signup3"
        app:layout_constraintEnd_toStartOf="@+id/nickname_textView_signup3" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/text_signupwarning"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="@+id/myinfo_textview_signup3"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_signup" />


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#F6F6F6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/text_signup"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="14dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/myinfo_textview_signup3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:text="필수 정보"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/nickname_textView_signup3"
        app:layout_constraintStart_toStartOf="@+id/line3_view_signup3"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />


</androidx.constraintlayout.widget.ConstraintLayout>