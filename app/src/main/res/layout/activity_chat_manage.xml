<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatManageActivity"
    android:background="#EDE8F2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/chat_button_chatmanage"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:backgroundTint="#FAFAFA"
                    android:drawableLeft="@drawable/drawable_left_image_customise"
                    android:drawableRight="@drawable/drawble_right_image_customise"
                    android:gravity="left"
                    android:paddingTop="20dp"
                    android:text="김수정"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <Button
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#FAFAFA"
                    android:drawableRight="@drawable/drawble_right_image_customise"
                    android:drawableLeft="@drawable/drawable_left_image_customise"
                    android:text="김수정"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:paddingTop="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>
                <Button
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#FAFAFA"
                    android:drawableRight="@drawable/drawble_right_image_customise"
                    android:drawableLeft="@drawable/drawable_left_image_customise"
                    android:text="김수정"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:paddingTop="20dp"
                    tools:ignore="SpeakableTextPresentCheck"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>